{
  "documentation": "https://cwiki.apache.org",
  "methods": [
    "POST"
  ],
  "url": {
    "path": "/cores/{core}",
    "paths": [
      "/cores/{core}"
    ]
  },
  "commands": {
    "reload": {
      "type":"object",
      "additionalProperties":true
    },
    "swap": {
      "type":"object",
      "properties": {
        "with": {
          "type": "string",
          "description": "The other core name"
        }
      },
      "required": [
        "with"
      ]
    },
    "rename": {
      "type": "object",
      "properties": {
        "to": {
          "type": "string",
          "description": "The new name"
        }
      },
      "required": [
        "to"
      ]
    },
    "unload": {
      "type": "object",
      "properties": {
        "deleteIndex": {
          "type": "boolean",
          "description": ""
        },
        "deleteDataDir": {
          "type": "boolean",
          "description": ""
        },
        "deleteInstanceDir": {
          "type": "boolean",
          "description": ""
        }
      }
    },

    "merge-indexes": {
      "type":"object",
      "additionalProperties":true
    },
    "request-recovery": {
      "type":"object",
      "additionalProperties":true
    },
    "split": "cores.core.Commands.split"
  }
}
