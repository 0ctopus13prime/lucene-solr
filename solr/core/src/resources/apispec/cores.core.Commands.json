{
  "documentation": "https://cwiki.apache.org/confluence/display/solr/CoreAdmin+API",
  "methods": [
    "POST"
  ],
  "url": {
    "paths": [
      "/cores/{core}"
    ]
  },
  "commands": {
    "reload": {
      "type":"object",
      "additionalProperties":true
    },
    "swap": {
      "type":"object",
      "properties": {
        "with": {
          "type": "string",
          "description": "The other core name"
        },
        "async": {
          "type": "string",
          "description": "Request ID to track this action which will be processed asynchronously"
        }
      },
      "required": [
        "with"
      ]
    },
    "rename": {
      "type": "object",
      "properties": {
        "to": {
          "type": "string",
          "description": "The new name"
        },
        "async": {
          "type": "string",
          "description": "Request ID to track this action which will be processed asynchronously"
        }
      },
      "required": [
        "to"
      ]
    },
    "unload": {
      "type": "object",
      "properties": {
        "deleteIndex": {
          "type": "boolean",
          "description": ""
        },
        "deleteDataDir": {
          "type": "boolean",
          "description": ""
        },
        "deleteInstanceDir": {
          "type": "boolean",
          "description": ""
        },
        "async": {
          "type": "string",
          "description": "Request ID to track this action which will be processed asynchronously"
        }
      }
    },

    "merge-indexes": {
      "type":"object",
      "properties": {
        "indexDir": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Multi-valued, directories that would be merged"
        },
        "srcCore": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Multi-valued, source cores that would be merged."
        },
        "async": {
          "type": "string",
          "description": "Request ID to track this action which will be processed asynchronously"
        }
      }
    },
    "request-recovery": {
      "type":"object",
      "additionalProperties": true,
      "description": "Internal API"

    },
    "forceprepareforleadership": {
      "type": "object",
      "additionalProperties": true,
      "description": "Internal API"
    },
    "split":  { "#include": "cores.core.Commands.split"},
    "prep-recovery": {
      "type": "object",
      "additionalProperties": true,
      "description": "Internal API"
    },
    "request-apply-updates": {
      "type": "object",
      "additionalProperties": true,
      "description": "Internal API"
    },
    "request-sync-shard": {
      "type": "object",
      "additionalProperties": true,
      "description": "Internal API"
    },
    "request-buffer-updates": {
      "type": "object",
      "additionalProperties": true,
      "description": "Internal API"
    }
  }
}
